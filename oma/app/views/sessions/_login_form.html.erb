<% form_tag session_url(Rails.env.development? ? {} : {:protocol => 'https'}), :class => 'login' do -%>
  <%= label_tag 'email' %> <%= text_field_tag 'email', @email, :size => 10 %>
  <%= label_tag 'password' %> <%= password_field_tag 'password', nil, :size => 10 %>

  <%= label_tag 'remember_me', 'Remember me' %> <%= check_box_tag 'remember_me', '1', @remember_me %>

  <%= submit_tag 'Log in', :class => 'submit' %>
<% end -%>
