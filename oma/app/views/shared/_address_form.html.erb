<%- f.fieldset 'Address' do -%>
  <%= f.text_field :address, :required => true, :first => true, :hint => controller.controller_name == 'member_updates' && controller.action_name == 'edit' ? @member_update.member.address : nil %>
  <%= f.text_field :address2, :label => 'Address 2', :hint => controller.controller_name == 'member_updates' && controller.action_name == 'edit' ? @member_update.member.address2 : nil %>
  <%- f.multiple_field_group :label => 'City, ST ZIP', :required => true do -%>
    <%= f.text_field :city %>
    <%= f.select :state, Addresses::US_STATES, :include_blank => controller.controller_name == 'member_updates' && controller.action_name == 'edit' %>
    <%= f.text_field :zip %>
    <%= content_tag(:p, "#{@member_update.member.city}, #{@member_update.member.state}, #{@member_update.member.zip}", :class => 'formHint') if controller.controller_name == 'member_updates' && controller.action_name == 'edit' %>
  <%- end -%>
<%- end -%>

<%- f.fieldset 'Contact info' do -%>
  <%= f.text_field :phone, :required => true, :size => 12, :maxlength => 12, :hint => controller.controller_name == 'member_updates' && controller.action_name == 'edit' ? @member_update.member.phone : '555-555-5555', :first => true %>
  <%= f.text_field :email, :hint => controller.controller_name == 'member_updates' && controller.action_name == 'edit' ? @member_update.member.email : nil %>
  <%= f.text_field(:url, :size => 20, :hint => controller.controller_name == 'member_updates' && controller.action_name == 'edit' ? @member_update.member.url : 'http://www.yoursite.com') if f.object.respond_to?(:url) %>
<%- end -%>
