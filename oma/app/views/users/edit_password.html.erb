<%- uni_form_for :user, @current_user, :url => {:controller => :users, :action => :update_password, :id => @current_user} do |f| -%>
  <%= f.error_messages %>

  <%- f.fieldset 'Password change' do -%>
    <%= f.password_field :password, :required => true, :size => 20, :maxlength => 20 %>
    <%= f.password_field :password_confirmation, :required => true, :size => 20, :maxlength => 20 %>
  <%- end -%>
  <%= f.submit 'Change my password' %>
<%- end -%>