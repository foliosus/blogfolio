</div> <!-- /index_content_region what -->

<div class="index_content_region blog">
  <div class="primary_content">
    <h2>From the blog</h2>
    <%= single_post(@posts.shift, :comments => false, :excerpt => true, :heading => :h3)%>
    <ul>
      <%- for post in @posts -%>
      <li><%= link_to h(post.title), blog_post_path(post) %></li>
      <%- end -%>
    </ul>
  </div> <!-- /primary_content -->

  <div class="secondary_content">
    <%= render :partial => "shared/photos" %>
  </div> <!-- /secondary_content -->
</div> <!-- /index_content_region blog -->
