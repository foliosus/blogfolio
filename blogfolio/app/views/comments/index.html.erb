<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>URL</th>
      <th>E-mail</th>
      <th>Post</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

<% for comment in @comments %>
  <tr>
    <td><%=h comment.author %></td>
    <td><%= link_to h(comment.homepage), comment.homepage %></td>
    <td><%=h comment.email %></td>
    <td><%= link_to h(comment.post.title), comment.post %></td>
    <td><%= link_to 'Show', post_url(comment.post) + "#comment_#{comment.id}" %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<p><%= link_to 'New comment', new_comment_path %></p>